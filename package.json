{
  "name": "github-release-digest",
  "version": "1.0.0",
  "description": "Automated GitHub release summary service",
  "main": "dist/main.js",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=20.x"
  },
  "scripts": {
    "build": "tsc && cp src/AI/instructions.md dist/AI/ && cp src/AI/models.json dist/AI/",
    "check-updates": "npm outdated",
    "clean": "rimraf dist",
    "dev": "rm -rf node_modules/.cache && TS_NODE_CACHE=false ts-node --transpile-only src/main.ts",
    "dev-build": "npm run build && npm start",
    "format": "prettier --write .",
    "format:check": "prettier . --check",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prepare": "npm run build",
    "release-summary": "node dist/main.js",
    "biweekly-summary": "node dist/main.js --days 14",
    "security-audit": "npm audit",
    "start": "node dist/main.js",
    "test": "c8 uvu tests --require ts-node/register",
    "test:coverage": "c8 uvu tests --require ts-node/register",
    "test:file": "node --require ts-node/register",
    "test:watch": "uvu tests --require ts-node/register --watch",
    "test:ai": "ts-node --transpile-only tests/ai.test.ts",
    "test:format": "ts-node --transpile-only tests/format.test.ts"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^6.0.0",
    "@google/genai": "^1.10.0",
    "@octokit/graphql": "^9.0.1",
    "@octokit/rest": "^22.0.0",
    "dotenv": "^17.0.1",
    "filenamify": "^6.0.0",
    "node-fetch": "^3.3.2",
    "openai": "^5.10.2",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "snowflake-sdk": "^2.2.0",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@eslint/js": "^8.57.1",
    "@types/node": "^20.19.4",
    "@types/node-fetch": "^2.6.12",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "c8": "^10.1.3",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-unicorn": "^50.0.1",
    "prettier": "^3.0.3",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.2",
    "uvu": "^0.5.6"
  }
}
